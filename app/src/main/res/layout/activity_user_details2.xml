<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:id="@+id/user_details_2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp">

        <!-- Progress Indicator -->
        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/progressDot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/progress_dot_active" />

            <View
                android:id="@+id/progressDot2"
                android:layout_marginStart="8dp"
                android:layout_width="24dp"
                android:layout_height="8dp"
                android:background="@drawable/progress_dot_active" />

            <View
                android:id="@+id/progressDot3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/progress_dot_inactive" />
        </LinearLayout>


        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="35sp"
            android:text="@string/more_about_you"
            android:textColor="#222222"
            android:textSize="32sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressIndicator"
            tools:targetApi="28" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/we_d_like_to_know_a_bit_more_about_your_preferences"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />


        <!-- Interest Label -->
        <TextView
            android:id="@+id/labelInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_interests"
            android:textSize="14sp"
            android:textColor="#222222"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Interest Radio Group -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"
            app:layout_constraintTop_toBottomOf="@id/labelInterest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radioMusic"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/music"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioFitness"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/fitness"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioTravel"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="1dp"
                android:paddingStart="12dp"
                android:text="@string/travel"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioCooking"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/cooking"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMovies"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/movies"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioArt"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/art"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioFashion"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/fashion"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioGaming"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/gaming"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.flexbox.FlexboxLayout>

        <!-- Relationship Label -->
        <TextView
            android:id="@+id/labelRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relationship_preference"
            android:textSize="14sp"
            android:textColor="#222222"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/flexRadioGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Relationship Radio Group -->
        <RadioGroup
            android:id="@+id/radioGroupRelationship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelRelationship"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radioStraight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/straight"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioGay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/gay"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioLesbian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/lesbian"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/relationshipOther"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Age Range Label -->
        <TextView
            android:id="@+id/labelAgeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relationship_preference"
            android:textSize="14sp"
            android:textColor="#222222"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/radioGroupRelationship"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Relationship Radio Group -->
        <RadioGroup
            android:id="@+id/radioGroupAgeRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelAgeRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radio1822"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/_18_22"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio2333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/_23_33"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio3448"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/_34_48"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio48Plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:padding="14dp"
                android:text="@string/_48"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Relationship Goal Label -->
        <TextView
            android:id="@+id/labelGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/looking_for"
            android:textSize="14sp"
            android:textColor="#222222"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/radioGroupAgeRange"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- Goal Radio Group -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexGoalRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"
            app:layout_constraintTop_toBottomOf="@id/labelGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radioDate"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/date"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioFriendship"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/friendship"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioLongTerm"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="1dp"
                android:paddingStart="12dp"
                android:text="@string/longTerm"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioShortTerm"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_radio_button"
                android:button="@android:color/transparent"
                android:drawableEnd="@drawable/radio_button_selector"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins"
                android:paddingEnd="2dp"
                android:paddingStart="12dp"
                android:text="@string/shortTerm"
                android:textColor="#222222"
                android:textSize="14sp"
                android:textStyle="bold" />
        </com.google.android.flexbox.FlexboxLayout>


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexGoalButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"
            app:layout_constraintTop_toBottomOf="@id/flexGoalRadioGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins"
                android:padding="16dp"
                android:layout_marginEnd="6dp"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="12dp"
                app:strokeColor="#e5e5e5"
                app:strokeWidth="2sp"
                app:rippleColor="#e5e5e5"

                app:layout_constraintTop_toBottomOf="@id/flexGoalRadioGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins"
                android:padding="16dp"
                app:backgroundTint="#AAD816"
                app:cornerRadius="12dp"

                android:layout_marginStart="6dp"
                app:layout_constraintTop_toBottomOf="@id/flexGoalRadioGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>