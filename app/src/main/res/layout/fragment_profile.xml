<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/profile_fragment"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/lime_green"
            android:gravity="bottom"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_title_profile"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Profile Avatar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <!-- Avatar Container -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_lime_light" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/change_profile_photo" />

                <TextView
                    android:id="@+id/profileInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="52sp"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:id="@+id/avatarEditButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/circle_white_elevated">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/change_profile_photo"
                        android:src="@drawable/ic_camera" />
                </FrameLayout>
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="16dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/gray_500"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <!-- Profile Options Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="20dp">

            <!-- Edit Name -->
            <LinearLayout
                android:id="@+id/optEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/option_item_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Container -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white_elevated">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/change_avatar"
                        android:src="@drawable/ic_person"
                        app:tint="@color/lime_green" />
                </FrameLayout>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_your_display_name"
                        android:textColor="@color/gray_500"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/change_avatar"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- Change Avatar -->
            <LinearLayout
                android:id="@+id/optChangeAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/option_item_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Container -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white_elevated">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/change_your_profile_picture"
                        android:src="@drawable/ic_camera"
                        app:tint="@color/lime_green" />
                </FrameLayout>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_avatar"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_a_new_profile_picture"
                        android:textColor="@color/gray_500"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- Account Settings -->
            <LinearLayout
                android:id="@+id/optAccountSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/option_item_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Container -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white_elevated">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/lime_green" />
                </FrameLayout>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_settings"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_and_security_settings"
                        android:textColor="@color/gray_500"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- ADD DIVIDER HERE -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginVertical="16dp" />


            <!-- Sign Out -->
            <LinearLayout
                android:id="@+id/optSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/option_item_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Container -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white_elevated">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/lime_green" />
                </FrameLayout>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_out"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_out_of_your_account"
                        android:textColor="@color/gray_500"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

            <!-- Deactivate Account -->
            <LinearLayout
                android:id="@+id/optDeactivate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/option_item_bg_red"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Container -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_red_light">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cancel"
                        app:tint="@color/red_500" />
                </FrameLayout>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deactivate_account"
                        android:textColor="@color/red_500"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temporarily_disable_your_account"
                        android:textColor="@color/gray_500"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/gray_400" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>